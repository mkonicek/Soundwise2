<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Soundwise"
		android:layout_margin="10dp"
		android:gravity="center"
		android:textSize="30dp" />

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Choose source of the picture to broadcast."
		android:layout_marginLeft="16dp"
		android:layout_marginTop="8dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="8dp"
		android:textSize="15dp"
		android:gravity="center_horizontal" />

	<!-- android:focusableInTouchMode=true causes that the button has to be touched twice -
		first click focuses, second click fires -->
	<Button
		android:id="@+id/samplesButton"
		android:text="Cool sample pictures"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="6dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="6dp"
		android:focusableInTouchMode="true"
		android:textSize="15dip" />

	<Button
		android:id="@+id/galleryButton"
		android:text="Gallery"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="6dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="6dp"
		android:focusableInTouchMode="false"
		android:textSize="15dip" />

	<Button
		android:id="@+id/cameraButton"
		android:text="Camera"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="6dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="6dp"
		android:textSize="15dip" />

	<Button
		android:id="@+id/drawButton"
		android:text="Draw something"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="6dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="6dp"
		android:textSize="15dip"
		android:enabled="false" />
		
	<Button
		android:visibility="gone"
		android:id="@+id/textButton"
		android:text="Write something"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="6dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="6dp"
		android:textSize="15dip"
		android:enabled="false" />
</LinearLayout>
